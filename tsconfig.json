{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",

    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,

    "sourceMap": true,

    "jsx": "preserve",
    "noImplicitAny": false,

    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strictNullChecks": false,
    "paths": {

      "@control-utils/*": ["src/utils/control/*"],
      "@form-utils/*": ["src/utils/form/*"],


      "@UI/*": ["src/UI/*"],
      "@const": ["src/const"],
      "@utils/*": ["src/utils/*"],
//      "@control-utils/*": ["src/utils/control-utils/*"],
      "@add-control-props-layers/*": ["src/utils/add-control-props-layers/*"],
      "@control-handlers/*": ["src/utils/control/data-handlers/*"],
      "@error-handlers/*": ["src/utils/control/error-handlers/*"],
      "@validators/*": ["src/utils/control/validators/*"],

      "@common-types": ["src/types/index.ts"],
      "@common-types/*": ["src/types/*"],
      "@src/*": ["src/*"],

      "@mock-functions/*": ["tests/mock-functions/*"],
      "@tests/*": ["tests/*"]
    }
  },
  "ts-node" : {
    "compilerOptions" : {
      "baseUrl": "./",
      "target": "es6",
      "module" : "commonjs",
      "strict": false
    }
  },

  "include": [
    "src/**/*",
    "tests/**/*.ts",
        "node_modules/",
  ],
  "exclude": [
//    "node_modules/",
    "lib",
    "es"
  ]
}
