{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",

    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,

    "sourceMap": true,

    "jsx": "preserve",
    "noImplicitAny": false,

    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strictNullChecks": false,
    "paths": {
      "@src/*": ["src/*"],
      "@const": ["src/const"],
      "@common-types": ["src/types.ts"],
      "@utils/*": ["src/utils/*"],
      "@control-utils/*": ["src/utils/control-utils/*"],
      "@add-control-props-layers/*": ["src/utils/add-control-props-layers/*"],
      "@control-handlers/*": ["src/utils/control-handlers/*"],
      "@error-handlers/*": ["src/utils/error-handlers/*"],
      "@validators/*": ["src/utils/validators/*"]
    }
  },
  "ts-node" : {
    "compilerOptions" : {
      "baseUrl": "./",
      "target": "es6",
      "module" : "commonjs",
      "strict": false
    }
  },

  "include": [
    "src/**/*",
    "tests/**/*.test.ts"
  ],
  "exclude": [
    "node_modules/",
    "lib",
    "es"
  ]
}
